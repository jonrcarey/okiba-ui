{% set title = 'Home' %}
{% set pageCtrl = 'homepage' %}

{% extends 'templates/_default.njk' %}

{% block head %}
  <style>
    [data-cursor]  {
      display: inline-block;
    }

    #cursor {
      width: 48px;
      height: 48px;
      z-index: 9999;
      pointer-events: none;
      mix-blend-mode: difference;
    }

    #cursor:before {
      display: block;
      width: 100%;
      height: 100%;
      content: '';
      transform: scale(2);
      border-radius: 50%;
      border: solid 1px currentColor;
      color: white;
      opacity: .2;
      transition: all .4s;
    }

    #cursor.hidden:before {
      opacity: 0;
    }

    #cursor.hover:before {
      transform: none;
      background-color: currentColor;
      opacity: 1;
    }
  </style>
{% endblock %}

{% block main %}
  <div class="js-scroll-element" style="color: white; padding-top: 50px;">
    <div>
      <h1 data-cursor>Welcome to Okiba Components!</h1>
    </div>
    <div>
      <p data-cursor>Use topbar menu to navigate examples!</p>
    </div>
    {% for index in range(0, 100) %}
      <div>
        <h2 data-cursor>Element #{{ index + 1 }}</h2>
      </div>
    {% endfor %}
  </div>
  <div id="cursor" class="hidden"></div>
{% endblock %}

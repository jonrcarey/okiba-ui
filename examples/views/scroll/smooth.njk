{% set title = 'Okiba | Smooth Scroll' %}
{% set pageCtrl = 'scroll-smooth' %}

{% extends 'templates/_default.njk' %}

{% block main %}
  <div id="scrollable">
    <div class="js-scroll-container">
      <div class="js-scroll-content" style="padding:72px 8px 8px;">
        <h1 class="js-scroll-element">Smooth scroll (with lerp)</h1>
        {% for index in range(0, 100) %}
          <div class="js-scroll-element">
            <h2>Element #{{ index + 1 }}</h2>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}

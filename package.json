{
    "name": "root",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@babel/cli": "^7.7.4",
        "@babel/core": "^7.7.4",
        "@babel/plugin-proposal-class-properties": "^7.7.4",
        "@babel/preset-env": "^7.7.4",
        "@okiba/component": "^1.0.12",
        "@okiba/dom": "^1.0.12",
        "@okiba/event-emitter": "^1.1.1",
        "@okiba/math": "^1.0.11",
        "babel-loader": "^8.0.6",
        "concurrently": "^5.0.0",
        "jsdoc-api": "^5.0.4",
        "lerna": "^3.19.0",
        "nunjucks": "^3.2.0",
        "webpack": "^4.41.2"
    },
    "scripts": {
        "bootstrap": "lerna bootstrap --use-workspaces",
        "build": "lerna exec --parallel -- babel --root-mode upward index.js -d dist",
        "dev:packages": "lerna exec --parallel -- babel -w --root-mode upward index.js -d dist",
        "dev:examples": "cd examples && npm start",
        "dev": "concurrently \"npm run dev:packages\" \"npm run dev:examples\"",
        "docs": "node ./docs/generate.js"
    }
}
